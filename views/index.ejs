<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>LIST APP</title>
    <link rel="stylesheet" href="/css/memostyle.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <%- include('header'); %>
    <header>
      <img class="logo" src="\images\Memobject-logo (1).png" >
    </header>
    <div class="container">
      <div class="container-header">
        <h1>メモ一覧</h1>
        <a href="/new" class="new-button">+ 新規登録</a>
      </div>
      <div class="index-table-wrapper">
        <div class="table-head">
          <span class="id-column"></span>
          <span>メモ</span>
        </div>
        <ul class="table-body">
          <% items.forEach((item) => { %>
            <li>
              <div class="item-data">
                <span class="id-column"><%=  %></span>
                <span class="name-column"><%= item.name %></span>
              </div>
              <div class="item-menu">
                <form action="/delete/<%= item.id %>" method="post">
                  <input type="submit" value="削除">
                </form>
                <a href="/edit/<%= item.id %>">編集</a>
              </div>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </body>
</html>